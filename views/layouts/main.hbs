<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="/static/css/style.css" />
</head>

<body>
     {{#if errors}}
      <div class="error">
        {{#each errors}}
          <p>{{msg}}</p>
        {{/each}}
      </div>
    {{/if}}

    <div id="container">

      <nav>
        <div class="left-container">
          <ul>
            <li><a href="/">Home</a></li>
            {{#if hasUser}}
            <li><a href="/create">Add +</a></li>
            {{else}}
            <li><a href="/login">Login</a></li>
            <li><a href="/register" class="left-container">Register</a></li>
            {{/if}}
          </ul>
        </div>
        {{#if hasUser}}
        <div class="right-container">
          <a href="/profile" class="log-out">{{user.username}}</a>
          <a href="/logout" class="log-out">Logout</a>
        </div>
        {{/if}}
      </nav>
      <main>
        {{{body}}}
      </main>
      <footer>@Smart Booking 2022</footer>
    </div>

</body>

</html>